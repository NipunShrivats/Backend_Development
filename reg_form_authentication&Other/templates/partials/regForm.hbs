<form class="regForm" action="/register" method="POST">

    <h1>REGISTRATION PAGE</h1>

    {{!-- fname --}}
    <div class="">
        <input type="text" class="form-control" id="fname" placeholder="First Name" name="firstName">
    </div>

    {{!-- lname --}}
    <div class="">
        <input type="text" class="form-control" id="lname" placeholder="Last Name" name="lastName">
    </div>

    {{!-- phone --}}
    <div class="">
        <input type="text" class="form-control" id="ph" minlength="10" maxlength="10" placeholder="Phone number"
            name="phone">
    </div>

    {{!-- Age --}}
    <div class="">
        <input type="text" class="form-control" id="age" minlength="1" maxlength="2" placeholder="Age" name="age">
    </div>

    {{!-- gender --}}
    <div class="gender">
        <label for="" class="radio inline">
            <input type="radio" name="gender" value="male">
            <span>Male</span>
        </label>

        <label for="" class="radio inline">
            <input type="radio" name="gender" value="female">
            <span>Female</span>
        </label>
    </div>

    {{!-- email --}}
    <div class="">
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
            placeholder="email" name="email">
    </div>

    {{!-- pass --}}
    <div class="">
        <input type="password" class="form-control" id="password" placeholder="password" name="password">
    </div>
    <div class="">
        <input type="password" class="form-control" id="comfirmPassword" placeholder="Comfirm Password*"
            name="confirmPassword">
    </div>


    {{!-- <button type="submit" class="btn btn-primary" value="Register">Register</button> --}}
    <input type="submit" value="Register">
</form>

<a href="/login">Go to login page</a>
<a href="/">Go to home page</a>